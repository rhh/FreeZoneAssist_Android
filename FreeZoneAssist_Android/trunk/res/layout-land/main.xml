<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">
	<TableLayout
		android:layout_width="fill_parent" 
		android:layout_height="wrap_content"
		android:gravity="center"
		android:stretchColumns="*"> 
		<TableRow 
			android:layout_height="wrap_content" 
			android:layout_width="fill_parent"  >
			<TextView 
				android:id="@+id/tvRider" 
				android:text="@string/tvRider_default"
				android:textSize="32sp" 
				android:typeface="monospace" 
				android:layout_width="wrap_content" 
				android:layout_height="wrap_content" 
				android:padding="0dp"
				android:layout_margin="2dp"
				android:background="@color/background" 			
				/>
			<TextView  
				android:id="@+id/tvSection"
				android:text="@string/tvSection_default"
				android:textSize="32sp" 
				android:typeface="monospace" 
				android:layout_width="wrap_content" 
				android:layout_height="wrap_content" 
				android:padding="0dp"
				android:layout_margin="2dp"
				android:background="@color/background" 			
				/>
		</TableRow>
		<TableRow>
			<TextView  
				android:id="@+id/tvPoints"
				android:text="@string/tvPoints_default"
				android:textSize="32sp" 
				android:typeface="monospace" 
				android:layout_width="wrap_content" 
				android:layout_height="wrap_content" 
				android:padding="0dp"
				android:layout_margin="2dp"
				android:background="@color/background" 			
				/>
			<TextView  
				android:id="@+id/tvCountdown"
				android:text="@string/tvCountdown_default"
				android:textSize="32sp" 
				android:typeface="monospace" 
				android:layout_width="wrap_content" 
				android:layout_height="wrap_content" 
				android:padding="0dp"
				android:layout_margin="2dp"
				android:background="@color/background" 			
				/>
		</TableRow>
	</TableLayout>
	<TableLayout 
		android:id="@+id/button_table"
		android:layout_width="fill_parent" 
		android:layout_height="fill_parent" 
		android:layout_gravity="center"
		android:padding="0dp"
		android:layout_marginTop="10dp"
		android:layout_marginBottom="10dp"
		android:weightSum="2.0"
		android:stretchColumns="*" >			
		<TableRow android:layout_weight="1.0">
			<ImageButton
				android:id="@+id/two_button"
				android:layout_marginLeft="0dp"
				android:layout_marginTop="5dp"
				android:layout_marginBottom="5dp"
				android:layout_marginRight="5dp"
				android:layout_height="fill_parent"
				android:background="@drawable/two"	/>
			<ImageButton 
				android:id="@+id/ten_button"
				android:layout_marginLeft="5dp"
				android:layout_marginTop="5dp"
				android:layout_marginBottom="5dp"
				android:layout_marginRight="5dp"
				android:layout_height="fill_parent"
				android:background="@drawable/ten" />				
			<ImageButton
				android:id="@+id/five_button"
				android:layout_marginLeft="5dp"
				android:layout_marginTop="5dp"
				android:layout_marginBottom="5dp"
				android:layout_marginRight="5dp"
				android:layout_height="fill_parent"
				android:background="@drawable/five" />
			<ImageButton 
				android:id="@+id/back_button"
				android:layout_marginLeft="5dp"
				android:layout_marginTop="5dp"
				android:layout_marginBottom="5dp"
				android:layout_marginRight="0dp"
				android:layout_height="fill_parent"
				android:background="@drawable/back" />
		</TableRow>
		<TableRow android:layout_weight="1.0">
			<ImageButton 
				android:id="@+id/start_button"
				android:layout_marginLeft="0dp"
				android:layout_marginTop="5dp"
				android:layout_marginBottom="5dp"
				android:layout_marginRight="5dp"
				android:layout_height="fill_parent"
				android:background="@drawable/start" />
			<ImageButton 
				android:id="@+id/goal_button"
				android:layout_marginLeft="5dp"
				android:layout_marginTop="5dp"
				android:layout_marginBottom="5dp"
				android:layout_marginRight="5dp"
				android:layout_height="fill_parent"
				android:background="@drawable/goal" />
			<ImageButton 
				android:id="@+id/stop_button"
				android:layout_marginLeft="5dp"
				android:layout_marginTop="5dp"
				android:layout_marginBottom="5dp"
				android:layout_marginRight="5dp"
				android:layout_height="fill_parent"
				android:background="@drawable/stop" />
			<ImageButton 
				android:id="@+id/save_button"
				android:layout_marginLeft="5dp"
				android:layout_marginTop="5dp"
				android:layout_marginBottom="5dp"
				android:layout_marginRight="0dp"
				android:layout_height="fill_parent"
				android:background="@drawable/save" />
		</TableRow>	
	</TableLayout>
</LinearLayout>